<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="61dp" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="Adınız      "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textStyle="normal|bold"
                android:textSize="24sp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/adgir"
                android:layout_weight="1"
                android:hint="Adın" />
        </LinearLayout>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="49dp" >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="Soyadınız"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textStyle="normal|bold"
                android:textSize="24sp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/soyadgir"
                android:layout_weight="1"
                android:hint="Soyad" />
        </LinearLayout>
    </TableRow>

    <TableRow
        android:layout_width="345dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.44">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="Uygulama Değerlendirme"
                android:layout_width="174dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:textAlignment="center"
                android:textStyle="normal|bold"
                android:textSize="24sp"
                android:layout_marginTop="35dp" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <RadioButton
                        android:text="Çok Kötü"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rd1"
                        android:layout_weight="1"
                        android:checked="true"
                        android:textColorLink="@android:color/holo_red_dark" />

                    <RadioButton
                        android:text="İdare Eder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rd2"
                        android:layout_weight="1" />

                    <RadioButton
                        android:text="Eh İşte"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rd3"
                        android:layout_weight="1" />

                    <RadioButton
                        android:text="Süper"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rd4"
                        android:layout_weight="1"
                        android:checked="true"
                        android:textColorLink="@android:color/holo_red_dark" />
                </RadioGroup>
            </TableRow>

        </LinearLayout>

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_weight="0.36" >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/editText4"
            android:hint="Yorum yazmak için tıklayın."
            android:textAlignment="center" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_weight="0.18">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <CheckBox
                android:text="Onaylıyorum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/onaylatik"
                android:layout_weight="0.39"
                android:layout_marginLeft="20dp" />

            <Button
                android:text="Gönder"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/gonder"
                android:layout_weight="1" />
        </LinearLayout>
    </TableRow>
</LinearLayout>